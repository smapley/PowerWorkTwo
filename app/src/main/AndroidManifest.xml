<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smapley.powerwork">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    　　
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Login"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activity.Register"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activity.Forget"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Activity.test" />
        <activity android:name=".Activity.Set" />
        <activity android:name=".Activity.Team" />
        <activity android:name=".Activity.HistoricalTask" />
        <activity android:name=".Activity.Publish" />
    </application>

</manifest>
